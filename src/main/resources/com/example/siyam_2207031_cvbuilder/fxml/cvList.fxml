<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.siyam_2207031_cvbuilder.controller.CVListController"
      spacing="10" style="-fx-background-color: #ECF0F1;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="CV Database Manager" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
    </HBox>

    <!-- Search Bar -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Search by name..." prefWidth="300"
                   style="-fx-font-size: 14px;"/>
        <Button fx:id="searchButton" text="Search" 
                style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 20;">
            <font>
                <Font name="System Bold" size="12"/>
            </font>
        </Button>
        <Button fx:id="refreshButton" text="Refresh" 
                style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 20;">
            <font>
                <Font name="System Bold" size="12"/>
            </font>
        </Button>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: #7F8C8D; -fx-font-style: italic;"/>
    </HBox>

    <!-- Table View -->
    <TableView fx:id="cvTableView" VBox.vgrow="ALWAYS" 
               style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-width: 1;">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="nameColumn" text="Full Name" prefWidth="200"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
            <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="150"/>
            <TableColumn fx:id="createdAtColumn" text="Created At" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="viewButton" text="View CV" 
                style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 10 25;">
            <font>
                <Font name="System Bold" size="12"/>
            </font>
        </Button>
        <Button fx:id="editButton" text="Edit CV" 
                style="-fx-background-color: #F39C12; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 10 25;">
            <font>
                <Font name="System Bold" size="12"/>
            </font>
        </Button>
        <Button fx:id="deleteButton" text="Delete CV" 
                style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 10 25;">
            <font>
                <Font name="System Bold" size="12"/>
            </font>
        </Button>
        <Separator orientation="VERTICAL"/>
        <Button fx:id="backButton" text="Back to Home" 
                style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 10 25;">
            <font>
                <Font name="System Bold" size="12"/>
            </font>
        </Button>
    </HBox>
</VBox>
